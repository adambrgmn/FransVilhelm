{
  "name": "@fransvilhelm/fransvilhelm",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/adambrgmn/fransvilhelm",
  "homepage": "https://github.com/adambrgmn/fransvilhelm",
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "coverage:combine": "npx istanbul-merge --out coverage/coverage-combined.json ./**/coverage/coverage-final.json && npx istanbul report --dir coverage --include coverage/coverage-combined.json lcov text-summary",
    "lint": "turbo run lint",
    "release": "turbo run build --force && yarn changeset publish",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "@fransvilhelm/changeset-changelog": "*",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.2",
    "plop": "^3.0.4",
    "prettier": "^2.5.1",
    "turbo": "^1.0.9",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md,yml,html}": "prettier --write"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "dependsOn": [],
        "outputs": []
      },
      "test:ci": {
        "dependsOn": [],
        "outputs": [
          "coverage/**"
        ]
      },
      "test:ci:react-18": {
        "dependsOn": [],
        "outputs": [
          "coverage/**"
        ]
      },
      "lint": {
        "dependsOn": [],
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
