{
  "name": "@fransvilhelm/hooks",
  "version": "0.0.0-development",
  "description": "A set of reusable React hooks",
  "main": "dist/hooks.js",
  "umd:main": "dist/hooks.umd.js",
  "module": "dist/hooks.esm.js",
  "source": "src/index.ts",
  "types": "dist/src/index.d.ts",
  "repository": "git@github.com:adambrgmn/hooks",
  "homepage": "https://hooks.fransvilhelm.com",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "utils"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "postbuild": "del dist/**/*.{test,example}.d.ts",
    "test": "tsdx test",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "lint": "eslint 'src/**/*.{ts,tsx}' && tsdx lint src",
    "plop": "plop",
    "plop:hook": "plop hook",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "use-subscription": "^1.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.1",
    "@testing-library/user-event": "^10.0.0",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "@types/testing-library__jest-dom": "^5.0.1",
    "@types/testing-library__react": "^9.1.2",
    "@types/testing-library__user-event": "^4.1.1",
    "@types/use-subscription": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "del-cli": "^3.0.0",
    "docz": "^2.2.0",
    "eslint": "6.x",
    "eslint-config-react-app": "5.2.0",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.18.3",
    "eslint-plugin-react-hooks": "2.x",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "plop": "^2.5.4",
    "prettier": "^1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "semantic-release": "^17.0.4",
    "tsdx": "^0.12.3",
    "tslib": "^1.11.0",
    "typescript": "^3.8.2"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "js,ts,jsx,tsx": [
      "eslint --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
