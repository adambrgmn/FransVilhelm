{
  "name": "@fransvilhelm/hooks",
  "version": "3.0.0",
  "description": "A set of reusable React hooks",
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/adambrgmn/hooks.git"
  },
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "homepage": "https://hooks.fransvilhelm.com",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "utils"
  ],
  "scripts": {
    "start": "./build.js --watch",
    "build": "./build.js",
    "test": "jest",
    "lint": "eslint . --ext .ts --ext .tsx --ext .js --ignore-pattern dist",
    "release": "yarn build && yarn changeset publish",
    "plop": "plop",
    "plop:hook": "plop hook",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "prepare": "husky install"
  },
  "dependencies": {
    "react-fast-compare": "^3.2.0",
    "use-subscription": "^1.5.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.11.2",
    "@fransvilhelm/changeset-changelog": "^1.0.0",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/use-subscription": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-eslint": "^10.1.0",
    "docz": "^2.2.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.10.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "estrella": "^1.4.1",
    "husky": "^7.0.0",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "plop": "^2.5.4",
    "prettier": "^2.5.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bugs": {
    "url": "https://github.com/adambrgmn/hooks/issues"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:testing-library/react"
    ],
    "rules": {
      "import/order": [
        "warn",
        {
          "newlines-between": "always",
          "groups": [
            "builtin",
            "external",
            "internal",
            [
              "parent",
              "sibling",
              "index"
            ]
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "js,ts,jsx,tsx": [
      "eslint --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
