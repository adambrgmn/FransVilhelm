{
  "name": "@fransvilhelm/hooks",
  "version": "0.0.0-development",
  "description": "A set of reusable React hooks",
  "main": "dist/hooks.js",
  "umd:main": "dist/hooks.umd.js",
  "module": "dist/hooks.esm.js",
  "source": "src/index.ts",
  "types": "dist/src/index.d.ts",
  "repository": "git@github.com:adambrgmn/hooks",
  "homepage": "https://hooks.fransvilhelm.com",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest",
    "prebuild": "del dist",
    "build": "microbundle --target web --no-sourcemap",
    "postbuild": "del dist/**/*.{test,example}.d.ts",
    "dev": "microbundle watch --target web --no-compress",
    "docz:dev": "node scripts/create-index-doc.js && docz dev",
    "docz:build": "node scripts/create-index-doc.js && docz build",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "create": "node scripts/create-hook.js",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "utils"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "10.x",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "docz": "^1.1.0",
    "docz-theme-default": "^1.1.0",
    "eslint": "5.x",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.5.0",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "jest-dom": "^3.2.0",
    "lint-staged": "^8.1.6",
    "microbundle": "^0.11.0",
    "prettier": "^1.17.0",
    "react": "16.9.0-alpha.0",
    "react-dom": "16.9.0-alpha.0",
    "react-testing-library": "^7.0.0",
    "semantic-release": "^15.13.3",
    "strman": "^2.0.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": true,
    "linters": {
      "*.{js,ts,jsx,tsx}": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{json,css,scss,md,mdx,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "publishConfig": {
    "access": "public"
  }
}
