{
  "name": "@adambrgmn/hooks",
  "version": "0.1.0",
  "description": "A set of reusable React hooks",
  "main": "dist/hooks.js",
  "umd:main": "dist/hooks.umd.js",
  "module": "dist/hooks.esm.js",
  "source": "src/index.ts",
  "repository": "git@github.com:adambrgmn/utils",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest",
    "prebuild": "rm -rf dist",
    "build": "microbundle build --target browser --strict",
    "postbuild": "rm -rf dist/**/__tests__",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "create": "node scripts/create-hook.js"
  },
  "files": [
    "dist/**"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@typescript-eslint/eslint-plugin": "^1.2.0",
    "@typescript-eslint/parser": "^1.2.0",
    "babel-eslint": "9.x",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "5.x",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-dom": "^3.0.1",
    "lint-staged": "^8.1.3",
    "microbundle": "^0.9.0",
    "prettier": "^1.16.4",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-testing-library": "^5.4.4",
    "strman": "^2.0.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": true,
    "linters": {
      "*.{js,ts,jsx,tsx}": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{json,css,scss,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
