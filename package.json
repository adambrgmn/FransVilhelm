{
  "name": "@fransvilhelm/fransvilhelm",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "internal/*",
    "packages/*"
  ],
  "repository": "https://github.com/adambrgmn/fransvilhelm",
  "homepage": "https://github.com/adambrgmn/fransvilhelm",
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "e2e": "turbo run e2e",
    "coverage": "fv coverage",
    "lint": "turbo run lint",
    "release": "turbo run build --force && yarn changeset publish",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "@fransvilhelm/changeset-changelog": "*",
    "@fransvilhelm/scripts": "*",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.5",
    "nyc": "^15.1.0",
    "patch-package": "^6.4.7",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "turbo": "^1.0.19",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md,mdx,yml,html}": "prettier --write"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "arrowParens": "always"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "test:ci": {
        "dependsOn": [
          "build"
        ],
        "outputs": [
          "coverage/**"
        ]
      },
      "test:ci:react-18": {
        "dependsOn": [
          "build"
        ],
        "outputs": [
          "coverage/**"
        ]
      },
      "lint": {
        "dependsOn": [],
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "nyc": {
    "report-dir": "./coverage",
    "include": [
      "**/*.{ts,tsx}"
    ],
    "exclude": [
      "**/*.stories.{ts,tsx}",
      "**/*.test.{ts,tsx}",
      "**/*.spec.{ts,tsx}",
      "**/__tests__/**",
      "**/.storybook/**/*",
      "node_modules"
    ],
    "reporter": [
      "lcov",
      "json",
      "text-summary"
    ],
    "excludeAfterRemap": true,
    "check-coverage": true,
    "branches": 75,
    "lines": 80,
    "functions": 80,
    "statements": 80
  }
}
