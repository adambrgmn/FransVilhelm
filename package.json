{
  "name": "@fransvilhelm/hooks",
  "version": "3.0.0",
  "description": "A set of reusable React hooks",
  "source": "src/index.ts",
  "main": "dist/hooks.js",
  "module": "dist/hooks.esm.js",
  "esmodule": "dist/hooks.modern.js",
  "umd:main": "dist/hooks.umd.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/adambrgmn/hooks.git"
  },
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "homepage": "https://hooks.fransvilhelm.com",
  "license": "MIT",
  "files": ["dist"],
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "utils"
  ],
  "scripts": {
    "start": "yarn build --watch",
    "build": "microbundle --jsx=React.createElement",
    "test": "jest",
    "lint": "eslint src --ext .ts --ext .tsx --ext .js",
    "type-check": "tsc --noEmit",
    "release": "yarn build && yarn changeset publish",
    "plop": "plop",
    "plop:hook": "plop hook",
    "docz:dev": "docz dev",
    "docz:build": "docz build"
  },
  "dependencies": {
    "react-fast-compare": "^3.2.0",
    "use-subscription": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@changesets/cli": "^2.10.2",
    "@fransvilhelm/changeset-changelog": "^1.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.5",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.10.3",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "@types/testing-library__jest-dom": "^5.9.2",
    "@types/testing-library__react": "^10.2.0",
    "@types/testing-library__user-event": "^4.2.0",
    "@types/use-subscription": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-eslint": "^10.1.0",
    "docz": "^2.2.0",
    "eslint": "^7.9.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "microbundle": "^0.12.3",
    "plop": "^2.5.4",
    "prettier": "^2.1.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "import/order": [
        "warn",
        {
          "newlines-between": "always",
          "groups": [
            "builtin",
            "external",
            "internal",
            [
              "parent",
              "sibling",
              "index"
            ]
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "js,ts,jsx,tsx": [
      "eslint --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
